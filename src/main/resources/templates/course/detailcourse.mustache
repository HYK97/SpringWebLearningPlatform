<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>강좌소개</title>

    {{>layout/import}}


    <link href="../assets/dist/css/blog.css" rel="stylesheet">
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>


</head>
<body>
{{>layout/header}}



<main class="container">
<div class="p-4 p-md-5 mb-4 row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 text-white rounded bg-dark">
<div class="col-md-6 ">
{{#course}}

    {{#thumbnail}}<a href="/course/detailcourse?id={{id}}"><img class="bd-placeholder-img card-img-top" width="100%"
                                                                height="255" src="{{thumbnail}}"></a>

    {{/thumbnail}}

    {{^thumbnail}}
            <a href="/course/detailcourse?id={{id}}">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="255"
                 xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail"
                 preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em">x</text>
            </svg>
            </a>
    {{/thumbnail}}

    </div>
        <div class="col-md-6 ">
            <h1 class="display-4 fst-italic my-4">{{courseName}}</h1>
            <p class="lead my-3">강사명 : {{teachName}}({{user.username}})</p>
            <p class="lead mb-0">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <div class="star-ratings">
                        <div id="star" style="width: {{starScope}}%" class="star-ratings-fill space-x-2 text-lg">
                            <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                        </div>
                        <div class="star-ratings-base space-x-2 text-lg">
                            <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                        </div>
                    </div>
                    <div class="star-ratings my-1">
                        <small id="scope" class="text-muted"> ({{scope}})</small>
                    </div>
                </div>
            </div>
            <p id="date" class="text-muted my-3 ">
                강좌 생성일 : {{createDate}}
            </p>
        </div>
    </div>

        <div class="row mb-2">


        </div>

        <div class="row g-5">
            <div class="col-md-8">
                <h3 class="pb-4 mb-4 border-bottom">
                    강좌소개
                </h3>

                <div class="my-5">

                    {{{courseExplanation}}}
                </div>


                <h3 class="pb-4 mb-4 border-bottom">
                    수강평
                </h3>
                <section>
                    <div class="row px-1">


                        <div class="col-md-3 center-items">
                            <div class=" star-box">
                                <div class="scope">{{scope}}</div>

                                <div class="star-ratings">
                                    <div id="star" style="width: {{starScope}}%"
                                         class="star-ratings-fill space-x-2 text-lg">
                                        <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                    </div>
                                    <div class="star-ratings-base space-x-2 text-lg">
                                        <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                    </div>
                                </div>
                                <div class="star-count">
                                    {{#reviewCount}}
                                        {{reviewCount}}개의 수강평
                                    {{/reviewCount}}
                                    {{^reviewCount}}
                                        0개의 수강평
                                    {{/reviewCount}}


                                </div>
                            </div>
                        </div>

                        <div class="col-md-9">
                            <div class=" border-1 progress-box">
                                <div id="box" class="mx-2 my-3 pl-">
                                    {{#starPercent}}
                                        <span class="progress-text"></span>
                                        <div class="progress-data ">
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated"
                                                     role="progressbar" aria-valuenow="75" aria-valuemin="0"
                                                     aria-valuemax="100"
                                                     style="width: {{.}}%"></div>
                                            </div>
                                        </div>
                                    {{/starPercent}}

                                </div>
                            </div>

                        </div>
                    </div>

                </section>




                <section>

                    <div class="row mt-5 ">
                        <div class="col-md-8 ">
                            <div class="text-break">
                                <div  style="display: flex;align-items: center; white-space: nowrap;">
                                    <span class="text-success review line">정렬</span>
                                    <span> | </span>

                                    <span class="review">ㆍ 최신 순</span>

                                    <span class="review">ㆍ 높은 평점 순</span>

                                    <span class="review">ㆍ 낮은 평점 순</span>

                                </div>
                            </div>
                        </div>
                        <hr class=" my-3">
                    </div>



                    <div id="result">

                    </div>
                    <div class="col" style=" display: flex; justify-content: center;">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">

                                <li class="page-item disabled" id="previous">
                                    <a class="page-link" id="previousAtag" aria-label="Previous">
                                        <span aria-hidden="true">«</span>
                                    </a>
                                </li>



                                <li class="page-item" id="next">
                                    <a class="page-link" id="nextAtag"  aria-label="Next">
                                        <span aria-hidden="true">»</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>

                </section>


            </div>

            <div class="col-md-4">

                <div class="position-sticky" style="top: 5rem;">


                    <div class="p-4">
                        <h4 class="fst-italic">수강신청하기</h4>
                        <p class="mb-0">
                            주의사항! : --
                        </p>
                        <ol class="list-unstyled mb-0">

                        </ol>
                    </div>
                    <div class="p-4 mb-3 bg-light rounded">


                        {{#applicationCheck}}
                            <a href="#" id="btn" class="w-100 btn btn-lg btn-success">> 강의 이어보기 </a>
                        {{/applicationCheck}}
                        {{^applicationCheck}}
                            <form method="post" action="/course/application">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" id="btn" class="w-100 btn btn-lg btn-success">> 수강신청하기</button>
                            </form>
                        {{/applicationCheck}}

                    </div>


                </div>
            </div>
        </div>


    </main>



    <script>
        $(document).ready(function () {

            $('#box').children().eq(0).text('5점');
            $('#box').children().eq(2).text('4점');
            $('#box').children().eq(4).text('3점');
            $('#box').children().eq(6).text('2점');
            $('#box').children().eq(8).text('1점');
        });

        function getId() {
            let course = {
                id: {{id}},
                teachName: '{{teachName}}'
            }
            return course;
        }
    </script>




{{/course}}



<script type="text/x-mustache">

    <div>
              {{#data}}
                <div class="row my-1 ">
                        <div class="col-md-8">
                        <div class="text-break">
                            <div class="col-md-6 ">
                                <div class="user-field">
                                    <div class="mx-2">
                                        <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32"
                                             class="rounded-circle">
                                    </div>
                                    <div class="user-field-name">
                                        <p class=" my-3">{{username}}</p>

                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <div class="star-ratings">
                                            <div id="star" style="width: {{starScope}}%"
                                                 class="star-ratings-fill space-x-2 text-lg">
                                                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                            </div>
                                            <div class="star-ratings-base space-x-2 text-lg">
                                                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                            </div>
                                        </div>
                                        <div class="star-ratings my-1">
                                            <small id="scope" class="text-muted"> ({{scope}})</small>
                                        </div>
                                    </div>
                                </div>
                                <p  class="text-muted my-2 ">
                                    {{comments}}
                                </p>

                                <small class="text-muted my-3 ">
                                    {{createDate}}
                                </small>
                            </div>
                        </div>
                    </div>
                       {{#reply}}
                    <div class="reply-box col-md-8">
                      <p  class="text-muted my-2 ">
                                   강사의 답변
                                </p>
                           <p  class="text-muted my-2 ">
                                     {{reply}}
                                </p>

                         <small class="text-muted my-3 ">
                                    {{createDate}}
                         </small>
                    </div>
                     {{/reply}}
                    <hr class="col-md-8 mt-3 mb-2">
                </div>
            {{/data}}
 </div>

</script>


<script src="../assets/dist/js/detailcourse.js"></script>

{{>layout/footer}}
</body>
</html>