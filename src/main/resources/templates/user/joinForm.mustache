<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>로그인</title>

    {{>layout/import}}

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="../assets/dist/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">

<main class="form-signin">
    <form name="joinForm">

        <h1 class="h3 mb-3 fw-normal">회원가입</h1>

        <div class="form-floating">
            <input type="text" name="username" class="form-control" id="username" placeholder="ID">
            <label for="username">ID</label>
        </div>

        <div class="form-floating">
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
            <label for="password">비밀번호</label>
        </div>

        <div class="form-floating">
            <input type="email" name="email" class="form-control" id="email" placeholder="example@gmail.com">
            <label for="email">이메일</label>
        </div>

        <div class="form-floating">
            <input type="text" name="nickname" class="form-control" id="nickname" placeholder="사용하실 닉네임을 입력해주세요">
            <label for="nickname">닉네임</label>
        </div>

        <div class="form-floating">
            <input type="text" name="selfIntroduction" class="form-control" id="selfIntroduction"
                   placeholder="자신의 소개를 간단하게 입력해주세요">
            <label for="selfIntroduction">자기소개</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="radio" name="role" value="ROLE_USER" checked> 학생
            </label>
            <label>
                <input type="radio" name="role" value="ROLE_MANAGER"> 선생님
            </label>
        </div>

        <button type="button" id="btn" class="w-50 btn btn-lg btn-primary">회원가입</button>

    </form>
    <input id="check" type="hidden" value="0">


</main>
<script>


    $(document).ready(function () {


        var check;
        autoForm();

    });

    $('#btn').click(function () {

        var queryString = $("form[name=joinForm]").serialize();
        if (joinCheck() == 1) {
            $.ajax({
                type: "post",
                url: "/join",
                data: queryString,
                cache: false,
                success: function (data) {
                    if (data == "2") {
                        alert("이미 id가 존재합니다.");
                    } else if (data == "3") {
                        alert("이미 닉네임이 존재합니다");
                    } else {
                        alert("회원가입을 환영합니다.");
                        $('#check').val("1");
                        location.replace(data);
                    }

                },
                error: function (request, error) {
                    alert("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
                    alert("회원가입실패");
                }
            });

        }
    });

    var emailTest = /([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

    function joinCheck() {
        if ($('#username').val() == '') {
            alert('아이디를 입력하세요');
            $('#username').focus();
            return;
        } else if ($('#password').val() == '') {
            alert('비밀번호를 입력하세요');
            $('#password').focus();
            return;
        } else if ($('#email').val() == '') {
            alert('이메일을 입력하세요');
            $('#email').focus();
            return;
        } else if (!emailTest.test($('#email').val())) {
            alert("유효하지않은 이메일입니다.");
            $('#email').focus();
            return;
        } else if ($('#nickname').val() == '') {
            alert('닉네임을 입력하세요');
            $('#password').focus();
            return;
        } else if ($('#selfIntroduction').val() == '') {
            alert('자기소개를 입력하세요');
            $('#email').focus();
            return;
        } else {
            return 1;
        }
    };

    function autoForm() {
        var username = "";
        var email = "";
        {{#user}}
            username = '{{username}}';
            email = '{{email}}';
        {{/user}}
        if (!username == "" && !email == "") {
            $('#username').val(username);
            $('#username').attr('readonly', 'readonly');
            $('#password').val("Password");
            $('#password').attr('readonly', 'readonly');
            $('#email').val(email);
            $('#email').attr('readonly', 'readonly');
        } else {
            $('#username').val("");
            $('#password').val("");
            $('#email').val("");
        }
    }


</script>


</body>
</html>

