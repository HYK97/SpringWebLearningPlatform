<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>비밀번호 찾기</title>

    {{>layout/import}}

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="../assets/dist/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">

<main class="form-signin">
    <form name="findPasswordForm">

        <h1 class="h3 mb-3 fw-normal">비밀번호찾기</h1>

        <div class="form-floating">
            <input type="text" name="username" class="form-control" id="username" placeholder="ID">
            <label for="username">ID</label>
        </div>

        <div class="form-floating">
            <input type="email" name="email" class="form-control" id="email" placeholder="email">
            <label for="email">Email</label>
        </div>

        <button type="button" id="btn" class="my-3 w-75 btn btn-lg btn-primary">임시비밀번호 발급</button>

    </form>
    <input id="check" type="hidden" value="0">


</main>
<script>


    $('#btn').click(function () {

        var queryString = $("form[name=findPasswordForm]").serialize();
        if (joinCheck() == 1) {
            $.ajax({
                type: "post",
                url: "/mail/send",
                data: queryString,
                success: function (data) {
                    if (data == "1") {
                        alert("임시 비밀번호 발급 성공 " +
                                "가입시 입력했던 이메일로 발송되었습니다.");
                        location.href = "/main/index";
                    } else if (data == "2") {
                        alert("해당정보로 가입된 사용자가 없습니다.");
                    } else {
                        alert("발송오류");
                    }
                },
                error: function (request, error) {
                    alert("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
                    alert("회원가입실패");
                }
            });

        }
    });

    var emailTest = /([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

    function joinCheck() {
        if ($('#username').val() == '') {
            alert('아이디를 입력하세요');
            $('#username').focus();
            return;
        } else if ($('#email').val() == '') {
            alert('이메일을 입력하세요');
            $('#email').focus();
            return;
        } else if (!emailTest.test($('#email').val())) {
            alert("유효하지않은 이메일입니다.");
            $('#email').focus();
            return;
        } else {
            return 1;
        }
    };


</script>


</body>
</html>

