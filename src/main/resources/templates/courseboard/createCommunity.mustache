<div id="createCommunityBox" class="hiddenBox" hidden>
    <div>
        <div class="py-5 text-center">
            <h2>글쓰기</h2>
        </div>

        <div class="row g-5 mb-5">
            <div class="col-md-12 col-lg-12">
                <form id="communityCreateForm" class="needs-validation">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <label for="title" class="form-label">제목</label>
                            <input type="text" name="title" class="form-control" id="communityTitleInput"
                                   placeholder="Title" required>
                            <div class="invalid-feedback">
                                게시글 제목을 입력해주세요!
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <label for="contents" class="form-label">내용</label>
                            <textarea class="summernote" name="contents" id="communityContentsArea" required></textarea>
                            <div class="invalid-feedback">
                                내용을 입력해주세요!
                            </div>
                        </div>

                    </div>
                    <hr class="my-4">
                    <button type="button" id="communityCreateBtn"
                            class="communityCreateBtn w-100 btn btn-primary btn-lg">게시글 등록
                    </button>
                    <button type="button" hidden="hidden" id="communityUpdateBtn"
                            class="communityCreateBtn w-100 btn btn-primary btn-lg">게시글 수정
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="justify-content-between d-flex" style="width:100%; position: sticky; bottom: 0px; z-index:999;">
        <div role="button" class="align-item-center text-secondary backBtn">
            <i class="bi bi-backspace-fill " style="font-size:50px"></i>
            <span style="font-size:20px">목록으로</span>
        </div>
    </div>


</div>
